<component>
	<dependencySets>
		<dependencySet>
			<outputDirectory>fesen-${project.version}/lib</outputDirectory>
			<useProjectArtifact>true</useProjectArtifact>
			<unpack>false</unpack>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<!-- bin -->
		<fileSet>
			<filtered>false</filtered>
			<directory>src/main/assemblies/files</directory>
			<outputDirectory>fesen-${project.version}/bin</outputDirectory>
			<lineEnding>dos</lineEnding>
			<includes>
				<include>*.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<filtered>false</filtered>
			<directory>src/main/assemblies/files</directory>
			<outputDirectory>fesen-${project.version}/bin</outputDirectory>
			<includes>
				<include>*.exe</include>
			</includes>
		</fileSet>
		<fileSet>
			<filtered>false</filtered>
			<directory>src/main/assemblies/files</directory>
			<outputDirectory>fesen-${project.version}/bin</outputDirectory>
			<fileMode>0755</fileMode>
			<directoryMode>0755</directoryMode>
			<lineEnding>unix</lineEnding>
			<includes>
				<include>elasticsearch</include>
				<include>elasticsearch-cli</include>
				<include>elasticsearch-env</include>
				<include>elasticsearch-env-from-file</include>
				<include>elasticsearch-keystore</include>
				<include>elasticsearch-node</include>
				<include>elasticsearch-plugin</include>
				<include>elasticsearch-shard</include>
			</includes>
		</fileSet>
		<!-- modules -->
		<fileSet>
			<directory>${project.build.directory}/modules</directory>
			<outputDirectory>fesen-${project.version}/modules</outputDirectory>
		</fileSet>
		<!-- config -->
		<fileSet>
			<directory>${project.basedir}/src/main/resources</directory>
			<includes>
				<include>elasticsearch.yml</include>
				<include>jvm.options</include>
				<include>log4j2.properties</include>
			</includes>
			<outputDirectory>fesen-${project.version}/config
			</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/assemblies/files</directory>
			<outputDirectory>fesen-${project.version}/config/jvm.options.d
			</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<filtered>false</filtered>
		</fileSet>
		<!-- logs -->
		<fileSet>
			<directory>src/main/assemblies/files</directory>
			<outputDirectory>fesen-${project.version}/logs</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<filtered>false</filtered>
		</fileSet>
		<!-- plugins -->
		<fileSet>
			<directory>src/main/assemblies/files</directory>
			<outputDirectory>fesen-${project.version}/plugins</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<filtered>false</filtered>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>../README.md</source>
			<outputDirectory>fesen-${project.version}</outputDirectory>
		</file>
		<file>
			<source>../LICENSE</source>
			<outputDirectory>fesen-${project.version}</outputDirectory>
		</file>
		<file>
			<source>../NOTICE</source>
			<outputDirectory>fesen-${project.version}</outputDirectory>
		</file>
	</files>
</component>
